<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h3>Sign Up on StayUp ðŸ§­</h3>
                    <p class="mb-0">Join the journey â€” explore amazing stays!</p>
                </div>
                <div class="card-body p-4" style="background: url('/images/signup-bg.jpg'); background-size: cover; background-blend-mode: lighten;">
                    <form action="/signup" method="POST" class="glass-bg needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label text-dark">Username</label>
                            <input
                                name="username"
                                type="text"
                                id="username"
                                class="form-control rounded-pill"
                                placeholder="Your username"
                                required />
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label text-dark">Email</label>
                            <input
                                name="email"
                                type="email"
                                id="email"
                                class="form-control rounded-pill"
                                placeholder="you@example.com"
                                required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label text-dark">Password</label>
                            <input
                                name="password"
                                type="password"
                                id="password"
                                class="form-control rounded-pill"
                                placeholder="Create a strong password"
                                required />
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-success rounded-pill">Sign Up</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Already a member? <a href="/login">Login here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-bg {
        background: rgba(255, 255, 255, 0.85);
        padding: 20px;
        border-radius: 20px;
    }
</style>
