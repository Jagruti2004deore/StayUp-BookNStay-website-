<!-- Add Google Fonts link in <head> of your main layout -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
  body {
    font-family: 'Poppins', sans-serif;
  }

  .navbar-brand i {
    color: #fe424d;
    font-size: 1.7rem;
  }

  .navbar-brand {
    font-weight: bold;
    font-size: 1.2rem;
    color: #343a40;
    margin-right: 0.2rem;
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .navbar-nav .nav-link {
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    color: #343a40;
    margin-left: 0.5rem;
    transition: color 0.2s;
  }

  .navbar-nav .nav-link:hover {
    color: #fe424d;
  }

  .logo-text {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 1.3rem;
    display: flex;
    align-items: baseline;
  }

  .logo-up {
    color: #fe424d;
    font-size: 1.8rem;
    line-height: 1;
    margin-left: 2px;
    font-weight: 700;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <i class="fa-regular fa-compass"></i>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link logo-text" href="/explore">
          Stay<span class="logo-up">Up</span>
        </a>
      </div>

      
      <div class="navbar-nav ms-auto">
        <a class="nav-link me-3" href="/listings/new">Got space? Host it</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
